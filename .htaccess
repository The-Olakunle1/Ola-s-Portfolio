# Prevent indexing by search engines
Header set X-Robots-Tag "noindex, nofollow, noarchive, nosnippet, noimageindex, notranslate, nocache"

# Block common crawlers
RewriteEngine On
RewriteCond %{HTTP_USER_AGENT} (googlebot|bingbot|slurp|duckduckbot|baiduspider|yandexbot|facebookexternalhit|twitterbot|linkedinbot) [NC]
RewriteRule ^(.*)$ - [F,L]

# Additional security headers
Header always set X-Frame-Options "DENY"
Header always set X-Content-Type-Options "nosniff"
Header always set Referrer-Policy "no-referrer"

# Cache control for HTML files
<FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>
